# Generated by Chef for <%= node['fqdn'] %>.
# Local modifications will be overwritten.

<% if @stderr_path -%>
<%= @stderr_path %>
<% end -%>
<% if @stdout_path -%>
<%= @stdout_path %>
<% end -%>
<% if @rails_log and @rails_log.instance_of?(Array) -%>
<% @rails_log.each do |log| -%>
<%= "#{@rails_root}/#{logs}.log" %>
<% endforeach -%>
<% else -%>
<%= "#{@rails_root}/#{@environment}.log" %>
<% end -%>
{
    daily
    missingok
    rotate <%= @logrotate_rotate %>
    dateext
<% if @logrotate_compress -%>
    compress
    delaycompress
<% end -%>
    lastaction
<% if @pidfile -%>
        pid=<%= @pidfile.inspect %>
        test -s $pid && kill -USR1 "$(cat $pid)"
<% end -%>
    endscript
}
