# Generated by Chef for <%= node['fqdn'] %>.
# Local modifications will be overwritten.

<% if @stderr_path -%>
<%= @stderr_path %>
<% end -%>
<% if @stdout_path -%>
<%= @stdout_path %>
<% end -%>
<% unless @rails_logs.empty? -%>
<%   @rails_logs.each do |log| -%>
<%= "#{@rails_root}/log/#{log}.log" %>
<%   end -%>
<% else -%>
<%= "#{@rails_root}/log/#{@environment}.log" %>
<% end -%>
{
    daily
    missingok
    rotate <%= @logrotate_rotate %>
    dateext
<% if @logrotate_compress -%>
    compress
    delaycompress
<% end -%>
    lastaction
<% if @pidfile -%>
        pid=<%= @pidfile.inspect %>
        test -s $pid && kill -USR1 "$(cat $pid)"
<% end -%>
    endscript
}
